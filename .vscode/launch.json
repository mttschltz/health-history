  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend Live Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/sk",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "PocketBase Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/pb",
      "args": [
        "serve",
        "--dev",
        "--http=0.0.0.0:8090",
        "--publicDir=../sk/build"
      ]
    }
  ]
}
